<Window x:Class="CryptoGUI.PasswordDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="146" Width="382" WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <Label Content="Enter your password: " HorizontalAlignment="Left" Margin="18,21,0,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="txt_pw" HorizontalAlignment="Left" Margin="23,47,0,0" VerticalAlignment="Top" Width="322" />
        <Button x:Name="btn_confirm" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10"
                VerticalAlignment="Bottom" Width="80" Click="btn_confirm_Click" />
        <Image HorizontalAlignment="Right" Height="44" VerticalAlignment="Top" Width="50" Source="/Resources/logo02.png" Margin="0,3,0,0"/>

    </Grid>
</Window>