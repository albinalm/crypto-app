<Window x:Class="CryptoGUI.KeyUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoGUI"
        mc:Ignorable="d"
        Title="Update credentials" Height="211" Width="247" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Height="144" VerticalAlignment="Top">
        <Label Content="Old password: " HorizontalAlignment="Left" Margin="7,4,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txt_oldPw" HorizontalAlignment="Left" Margin="10,30,0,0" Password="" VerticalAlignment="Top" Width="212"/>
        <Label Content="New password:" HorizontalAlignment="Left" Margin="7,50,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txt_newPw" HorizontalAlignment="Left" Password="" VerticalAlignment="Top" Width="212" Margin="10,74,0,0"/>
        <Label Content="Repeat:" HorizontalAlignment="Left" Margin="7,96,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txt_repeat" HorizontalAlignment="Left" Margin="10,120,0,0" Password="" VerticalAlignment="Top" Width="212"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="71,0,0,-22" VerticalAlignment="Bottom" Width="90" Click="Button_Click"/>

    </Grid>
</Window>
